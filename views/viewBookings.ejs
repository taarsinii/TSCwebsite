<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Bookings</title>
    <script>
        // Function to confirm delete action
        function confirmDelete(BookingID) {
        const confirmAction = confirm("Are you sure you want to delete this booking?");
        if (confirmAction) {
            // Send DELETE request to server
            fetch(`/booking/delete/${BookingID}`, {
                method: 'DELETE',
            })
            .then(response => response.json()) // Parse the JSON response
            .then(data => {
                if (data.message === 'Booking deleted successfully.') {
                    // Remove the deleted booking from the table without a page refresh
                    const row = document.getElementById(`booking-row-${BookingID}`);
                    row.remove();  // Remove the row from the table
                } else {
                    alert('Failed to delete booking.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting booking.');
            });
        }
    }
    </script>
</head>
<body>
    <h1>Your Bookings</h1>

    <% if (bookings.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Room ID</th>
                    <th>Number of Guests</th>
                    <th>Check-In Date</th>
                    <th>Check-Out Date</th>
                    <th>Total Price</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% bookings.forEach(booking => { %>
                    <tr id="booking-row-<%= booking.BookingID %>">
                        <td><%= booking.BookingID %></td>
                        <td><%= booking.RoomID %></td>
                        <td><%= booking.NumberOfGuests %></td>
                        <td><%= booking.CheckInDate %></td>
                        <td><%= booking.CheckOutDate %></td>
                        <td><%= booking.BookingTotalPrice %></td>
                        <td><%= booking.BookingStatus %></td>
                        <td>
                            <!-- Edit button -->
                            <a href="/booking/edit/<%= booking.BookingID %>">Edit</a>

                            <!-- Delete button with confirmation -->
                            <button onclick="confirmDelete('<%= booking.BookingID %>')">Delete</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No bookings found!</p>
    <% } %>

    <!-- Back to Home Button -->
    <button onclick="location.href='/user/home'">Back to Home</button>
</body>
</html>
